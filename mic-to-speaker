<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>マイクtoスピーカー</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        button {
            padding: 15px 30px;
            font-size: 1.2em;
            cursor: pointer;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #0056b3;
        }
        #status {
            margin-top: 20px;
            font-size: 1.1em;
            color: #333;
        }
        .active {
            background-color: #28a745;
        }
        .active:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <h1>マイクからの音声をスピーカーへ</h1>
    <button id="toggleMicrophone">マイクを有効にする</button>
    <p id="status">待機中...</p>

    <script>
        let audioContext;
        let mediaStreamSource;
        let currentStream;

        const toggleButton = document.getElementById('toggleMicrophone');
        const statusDisplay = document.getElementById('status');

        async function startMicrophone() {
            try {
                statusDisplay.textContent = 'マイクにアクセス中...';
                currentStream = await navigator.mediaDevices.getUserMedia({ audio: true });

                audioContext = new (window.AudioContext || window.webkitAudioContext)();
                mediaStreamSource = audioContext.createMediaStreamSource(currentStream);

                // マイクからの音声を直接スピーカーに接続
                mediaStreamSource.connect(audioContext.destination);

                toggleButton.textContent = 'マイクを停止する';
                toggleButton.classList.add('active');
                statusDisplay.textContent = 'マイクが有効になり、スピーカーに出力中...';
            } catch (err) {
                console.error('マイクへのアクセス中にエラーが発生しました:', err);
                statusDisplay.textContent = `エラー: マイクにアクセスできませんでした。(${err.name})`;
                alert('マイクにアクセスできませんでした。ブラウザの設定を確認してください。');
                stopMicrophone(); // エラー時は停止状態に戻す
            }
        }

        function stopMicrophone() {
            if (currentStream) {
                currentStream.getTracks().forEach(track => track.stop());
                currentStream = null;
            }
            if (mediaStreamSource) {
                mediaStreamSource.disconnect();
                mediaStreamSource = null;
            }
            if (audioContext) {
                audioContext.close();
                audioContext = null;
            }
            toggleButton.textContent = 'マイクを有効にする';
            toggleButton.classList.remove('active');
            statusDisplay.textContent = '待機中...';
        }

        toggleButton.addEventListener('click', () => {
            if (!audioContext || audioContext.state === 'closed') {
                startMicrophone();
            } else {
                stopMicrophone();
            }
        });

        // ページが閉じられるときにマイクを停止
        window.addEventListener('beforeunload', stopMicrophone);
    </script>
</body>
</html>
